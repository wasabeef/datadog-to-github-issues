  "description": "GitHub Action: Datadog Errors to GitHub Issues",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "bun run build",
    "build": "ncc build src/index.ts -o dist",
    "build:check": "bun run build && echo 'ğŸ“¦ Build completed. Check dist/ folder:' && ls -la dist/",
    "build:dev": "bun run build && git add dist/ && echo 'ğŸ” Build changes:' && git diff --cached --stat",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "github-actions",
    "datadog",
    "rum",
